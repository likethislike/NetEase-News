<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--TabLayout布局-->

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/main_netease_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_netease_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/news_selector"
            android:gravity="center"
            android:text="新闻"
            android:textSize="10sp"
            android:textColor="@drawable/text_selector" />

        <RadioButton
            android:id="@+id/main_netease_online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/online_selector"
            android:gravity="center"
            android:text="直播"
            android:textSize="10sp"
            android:textColor="@drawable/text_selector" />

        <RadioButton
            android:id="@+id/main_netease_talk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/talk_selector"
            android:gravity="center"
            android:text="话题"
            android:textSize="10sp"
            android:textColor="@drawable/text_selector" />

        <RadioButton
            android:id="@+id/main_netease_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/person_selector"
            android:gravity="center"
            android:text="我"
            android:textSize="10sp"
            android:textColor="@drawable/text_selector" />
    </RadioGroup>
</LinearLayout>
